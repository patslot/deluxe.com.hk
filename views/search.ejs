<!DOCTYPE html>
<html>

<head>
  <%- include('partials/header.ejs', {
    title: SITE_NAME,
    ogTitle: "Deluxe Hong Kong潮流資訊平台",
    ogImage: null,
    ogDescription: null,
    metaKeyword: metaKeyword,
    origin: origin,
    fullURL: fullURL
  }) %>
  <%- include('partials/googleAdTag.ejs', {adTag: adTag, ky:""}) %>
  <%- include('partials/google-analytics.ejs') %>
</head>

<body ng-app="addv2" ng-controller="SearchController" categ-ename="<%= ename %>"
  categ-name="<%= categ %>" search-query="<%= query %>">
  <%- include('partials/mobileMenu.ejs', {menu: menu}) %>
  <%- include('partials/topMenu.ejs', {menu: menu}) %>
  <div class="container nm_home">
    <div class="row nm_row">
      <div class="main_content">
        <div class="nm_section">
          <headbanner headbanner-id="headbanner1"></headbanner>
          <div class="row">
            <div class='searchTitle'>Search Result: "<%= query %>"</div>
            <div class="nm_mpm col-md-6 col-xs-12">
                  <% results.forEach(function(a, idx) { %>
                        <div class="al_two_image col-sm-12 col-md-6 col-xs-12">
                            <a href="<%= a.link %>">
                            <div class="pos-relative artsListImg">
                              <img src="<%= a.ogimage %>"> 
                            </div>
                          </a>
                        </div>
                        <div class="keyword_content al_two_content col-sm-12 col-md-6 col-xs-12">
                          <div class="al_two_content_label">[<%= a.displayCategory %>]</div>
                          <a href="<%= a.link %>">
                            <div class="other_article al_two_content_title">
                              <%= a.title %>
                            </div>
                          </a>
                        </div>
                        <div class="clearfix"></div>
                    <% }) %>

                  <div lazy-scroll="loadSearchArticles()"
                  style="min-height: 0px !important"
                  lazy-no-scroll="noMoreArticles">
                  <div class="nm_section" ng-repeat="articles in moreArticleGroups track by $index">
                    <articles-in-search add-articles="articles"></articles-in-search>
                  </div>
                  <div align="center" ng-show="loadingArticles" style="margin-top: 20px">
                    <img src="/img/loading.gif" />
                  </div>
                </div>
                
              </div>
          
            <div class="lrec_ad_wrapper col-md-3">
              <lrec lrec-id="lrec1" lrec-num="1"></lrec>
              <lrec lrec-id="lrec2" lrec-num="2"></lrec>
            </div>
          </div>
        </div>
        <div class="nm_section">
            <%- include('partials/footer.ejs') %>
        </div>
      </div>
    </div>
  </div>
</body>
</html>