<div class="sticky-placeholder"></div>
<div class="nm_header" vmenu="sibling">
  <div class="index-logo">
    <a class="logo" href="/">http://hk.add.nextmedia.com/</a>
  </div>
  <nav id="sticky-wrap">
    <div class="nav">
      <div class="nav--inner">
        <div class="nav--menu">
          <label vmenu="trigger" for="nav-toggle" class="nav-toggle-icon">
            <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
          </label>
          <a href="/" class="logo"><img src="/img/imgpsh_fullsize.png"></a>
          <a href="#" class="visible-xs" id="mobilesearchdropdown">
            <span class="mobilemenu_search_icon"><img class="search-icon" src="/img/ico-search.png"></span>
          </a>
          <div id="mobile-search-dropdown" class="mobile-search-dropdown">
                  <span class="menu_search_icon">
                    <img class="search-icon" src="/img/ico-search.png">
                  </span>
                  <form role="search" method="GET" class="mobilesearchform2" action="#">
                   <input class="form-control" type="text" name="mobilequery2" id="mobilequery2" placeholder="Search">
                  </form>
                  <a href="#" class="search-close" id="mobilesearchclose">
                    <span class="menu_search_icon">
                      <img src="/img/ico-close.png">
                    </span>  
                  </a>
          </div>
          <% if (menu.main.length > 0 || menu.sub.length > 0) { %>
          <ul class="text">
            <% menu.main.forEach(function(m) { %>
                <li>
                <a href="/<%= m.name %>" class="<%= m.activeClass %>">
                  <%= m.disName %>
                </a>
              </li>
            <% }) %>
            <% if (menu.sub.length > 0) { %>
            <li class="menu_dropdown">
              More
              <div class="menu_dropdown_content">
                <% menu.sub.forEach(function(m) { %>
                  <div>
                    <a href="/<%= m.name %>" class="<%= m.activeClass %>">
                      <%= m.disName %>
                    </a>
                  </div>
                  <% }) %>
              </div>
            </li>
            <% } %>
            <li><a href="https://campaign.nextdigital.com.hk/Deluxe/club/index.html" target="_blank" class="navJoinDeluxeClub">JOIN DELUXE CLUB</a></li>
            <li>
              <span class="menu_fb_icon">
                <a href="https://www.facebook.com/deluxehongkong" target="_blank">
                  <img src="/img/fbIcon.png">
                </a>
              </span>
            </li>
            <li >  
              <span class="menu_ig_icon">
                <a href="https://www.instagram.com/deluxehongkong" target="_blank">
                  <img src="/img/igicons.png">
                </a>
              </span>
            </li>
            <li >  
                <span class="menu_youtube_icon">
                <a href="https://www.youtube.com/user/memaghk" target="_blank">
                  <img src="/img/youtubeIcon.png">
                </a>
              </span>
            </li>
            <li id="menu_search">  
                <span class="menu_search_icon">
                  <a href="#" id="searchdropdown">
                    <img src="/img/ico-search.png">
                  </a>
                </span>
                <div id="search-dropdown" class="search-dropdown">
                  <span class="menu_search_icon">
                    <img class="search-icon" src="/img/ico-search.png">
                  </span>
                  <form role="websearch" method="GET" class="searchform" action="#">
                   <input class="form-control" type="text" name="query" id="query" placeholder="search">
                  </form>
                  <a href="#" class="search-close" id="searchclose">
                    <span class="menu_search_icon">
                      <img src="/img/ico-close.png">
                    </span>  
                  </a>
                </div>
            </li>
            
          </ul>
          <% } %>

          <div class="clearfix"></div>
        </div>
      </div>
    </div>
  </nav>
</div>
