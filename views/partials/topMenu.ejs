<div class="nm_header" vmenu="sibling">
  <div class="index-logo">
    <a class="logo" href="/">http://hk.add.nextmedia.com/</a>
  </div>
  <nav id="sticky-wrap">
    <div class="nav">
      <div class="nav--inner">
        <div class="nav--menu">
          <label vmenu="trigger" for="nav-toggle" class="nav-toggle-icon"></label>
          <a href="/" class="logo"><img src="/img/imgpsh_fullsize.png"></a>
          <ul class="text">
            <% menu.main.forEach(function(m) { %>
            <li>
              <a ng-href="/<%= m.name %>" target="_self">
                <%= m.name %>
              </a>
            </li>
            <% }) %>
            <li class="menu_dropdown">
              More
              <div class="menu_dropdown_content">
                <% menu.sub.forEach(function(m) { %>
                  <div>
                    <a ng-href="/<%= m.name %>" target="_self">
                      <%= m.name %>
                    </a>
                  </div>
                  <% }) %>
              </div>
            </li>
            <span class="menu_fb_icon">
              <img src="/img/fbIcon.png">
            </span>
            <span class="menu_ig_icon">
              <img src="/img/igicons.png">
            </span>
          </ul>
        </div>
      </div>
    </div>
  </nav>
</div>

<style>
  .nm_header {
    position: relative;
  }
  
  .nm_header .index-logo {
    display: none;
  }
  
  .nm_header a,
  .nm_header li {
    color: Grey;
  }
  
  .menu_fb_icon img,
  .menu_ig_icon img {
    height: 25px;
    width: 25px;
    margin-top: -10px;
    margin-left: 10px;
    background-size: 25px 25px;
  }
  
  .menu_dropdown_content {
    display: none;
    position: absolute;
    background-color: #f9f9f9;
    min-width: 160px;
    text-align: left;
    box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
    padding: 12px 16px;
    z-index: 1;
  }
  
  .menu_dropdown {
    cursor: pointer;
  }
  
  .menu_dropdown:hover .menu_dropdown_content {
    display: block;
  }
  
  .nm_header .nav--menu .nav-toggle-icon {
    background: url(/img/icon02.jpg) no-repeat center;
    width: 50px;
    height: 50px;
    position: absolute;
    top: 2px;
    left: 5px;
    margin: 0;
  }
  
  .nm_header label[for="nav-toggle"] {
    cursor: pointer;
    touch-action: manipulation;
  }
  
  .nm_header .index-logo .logo {
    background: url(/img/imgpsh_fullsize.png) no-repeat center;
    text-indent: 100%;
    white-space: nowrap;
    overflow: hidden;
    display: block;
    margin: 0 auto;
    width: 295px;
    height: 85px;
  }
  
  .nm_header #sticky-wrap {
    z-index: 11;
    text-transform: uppercase;
    position: relative;
    width: 100%;
    height: 65px;
    margin: 0 auto;
    background-color: #fff;
  }
  
  #sticky-wrap .nav {
    position: relative;
    width: 100%;
    height: 55px;
    margin: 0 auto;
    box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
  }
  
  .nm_header .nav--inner {
    max-width: 1280px;
    margin: 0 auto;
    box-sizing: border-box;
    position: relative;
    height: auto;
  }
  
  .nm_header .nav--menu {
    display: block;
    position: relative;
    width: 100%;
    height: 55px;
    vertical-align: middle;
    text-align: center;
  }
  
  .nm_header .nav--menu .logo img {
    width: 160px;
    margin: 8px 0 0 20px;
  }
  
  .nm_header .index-logo+#sticky-wrap .nav .nav--menu .text {
    padding-left: 0px;
  }
  
  .nm_header .nav--menu .text {
    display: none;
    line-height: 55px;
  }
  
  .nm_header .nav--menu .text li {
    display: inline-block;
    margin: 0px 8px;
    font-size: 16px;
    font-weight: 300;
  }
  
  .nm_header .nav--menu .search {
    display: inline-block;
    position: absolute;
    margin-top: -30px;
    top: 50%;
    right: 20px;
    background: #fff;
  }
  
  @media (min-width: 768px) {
    .nm_header .nav--menu .nav-toggle-icon,
    .nm_header .nav--menu .logo {
      display: none;
    }
    .nm_header .index-logo {
      display: block;
    }
    .nm_header .nav--menu .text {
      display: block;
    }
  }
</style>

<script type="text/javascript">
  var toggleMenu = function() {
    var $content = $('[vmenu="content"]').first();
    var $siblingContent = $('[vmenu="sibling"]');
    var $nmHome = $('.nm_home');
    var $nmHeader = $('.nm_header');
    var $mobilePanel = $('.nm_v_menu');
    if ($nmHome.hasClass('nav-panel-active')) {
      $nmHome.removeClass('nav-panel-active');
      $nmHeader.removeClass('nav-panel-active');
      $mobilePanel.removeClass('nav-panel-active')
    } else {
      $nmHome.addClass('nav-panel-active');
      $nmHeader.addClass('nav-panel-active');
      $mobilePanel.addClass('nav-panel-active')
    }
  }

  $(document).ready(function() {
    $('[vmenu="trigger"]').on('click', toggleMenu);
  });
</script>
