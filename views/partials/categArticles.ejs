<% articles.forEach(function(a, idx) { %>
<div class="al_two_col_container hidden-xs">
  <% var isEven = idx % 2 === 0; %>
  <% if (!isEven) { %>
  <div>
    <div class="al_two_content col-sm-5 col-md-6 col-xs-12">
      <div class="al_two_content_label">[<%= a.catName %>]</div>
      <a href="<%= a.linkURL %>">
        <div class="al_two_content_title">
          <%= a.title %>
        </div>
        <div class="other_article al_two_content_content">
          <%- a.content %>
        </div>
      </a>
    </div>
    <div class="al_two_image col-sm-5 col-md-6 col-xs-12">
      <a href="<%= a.linkURL %>">
        <%- include('imageHasVideo.ejs', {a: a}) %>
      </a>
    </div>
  </div>
  <% } else if (isEven) { %>
  <div>
    <div class="al_two_image col-sm-5 col-md-6 col-xs-12">
      <a href="<%= a.linkURL %>">
        <%- include('imageHasVideo.ejs', {a: a}) %>
      </a>
    </div>
    <div class="al_two_content col-sm-5 col-md-6 col-xs-12">
      <div class="al_two_content_label">[<%= a.catName %>]</div>
      <a href="<%= a.linkURL %>">
        <div class="al_two_content_title">
          <%= a.title %>
        </div>
        <div class="other_article al_two_content_content">
          <%- a.content %>
        </div>
      </a>
    </div>
  </div>
  <% } %>
</div>
<% }) %>
<% articles.forEach(function(a, idx) { %>
<div class="al_two_col_container visible-xs">
  <div class="row">
    <div class="al_two_image col-sm-5 col-md-6 col-xs-12">
      <a href="<%= a.linkURL %>">
        <%- include('imageHasVideo.ejs', {a: a}) %>
      </a>
    </div>
    <div class="al_two_content col-sm-5 col-md-6 col-xs-12">
      <div class="al_two_content_label">[<%= a.catName %>]</div>
      <a href="<%= a.linkURL %>">
        <div class="al_two_content_title">
          <%= a.title %>
        </div>
      </a>
    </div>
  </div>
</div>
<div style="clear:both"></div>
<% }) %>
