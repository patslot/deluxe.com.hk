    "ch": "<%= channel %>", "cat": "<%= category %>", "ky": "<%= ky %>", "ngsid": "", "ref": ""};
   
  (function() {
    sendPageview(nxmObj1);
    //Scroll Depth tracking
    var trackRecords = [];
     


    function getPageScrollPercent() {
      var bottom = $(window).height() + $(window).scrollTop();
      var height = $(document).height();
      return Math.round(100 * bottom / height);
    }

    function sendPageDepth(depth) {
      trackRecords.push(depth.toString());
      nxmObj1.platform = getPlatform();
      nxmTrack.nxmAddSeg('PLATFORM=' + encodeURIComponent(nxmObj1.platform));
      nxmTrack.nxmSendPageDepth(depth, new Date().getTime());
    }
  })();
</script>
