<div class="nm_section up_coming_section">
  <div class="row nm_row front">
    <div class="col-sm-12">
      <div class="up_coming_ball nm_up_coming">
        <h4 class="text-center nm_section_header"></h4>
      </div>
    </div>
  </div>
  <div class="row nm_row nm_section_border" id="upcoming_events_content">
    <% events.forEach(function(e) { %>
    <div class="text-left nm_section_content">
      <div class="uce_date">
        <%- e.endDateTime %>
      </div>
      <div class="uce_title">
        <%= e.catName %>
      </div>
      <div class="uce_content">
        <%- e.content %>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<script>
$(document).ready(function() {
  $('#upcoming_events_content').endlessScroll({
    callback: function() {
      var $eventItem = $('#upcoming_events_content div.nm_section_content:nth-last-child(10)').clone();
      $('#upcoming_events_content .endless_scroll_inner_wrap').append($eventItem);
    }
  });
});
</script>
